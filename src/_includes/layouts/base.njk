<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/static/css/main.css">
    <link rel="stylesheet" type="text/css" href="/static/css/themes/prism.css" />
    <title>{{ title }}</title>
  </head>
  <body>
    <div class="grid-container">
      <header>{% block header %}{% endblock %}</header>
      <nav class="sitenav">{% block sitenav %}{% endblock %}</nav>
      {% block pagenav %}
      {{ content | toc | safe }}
      {% endblock %}
      <div class="clearfix"></div>
      <main>
        {% block content %}{{ content | safe }}{% endblock %}
      </main>
      <footer>
        {% block footer %}
        <div id="copyright">&copy; Copyright {{ year }} Serdar Tumgoren</div>
        {% endblock %}
      </footer>
    </div>
  </body>
</html>
